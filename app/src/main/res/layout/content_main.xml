<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="harlockstudio.com.br.mathsucks.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/textResultado"
        android:textSize="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/porcentagem"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textResultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/editPorcentagem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/valor"
        android:textAlignment="center"
        android:ems="10"
        android:layout_marginTop="51dp"
        android:id="@+id/editValor"
        android:layout_below="@+id/editPorcentagem"
        android:layout_alignLeft="@+id/editPorcentagem"
        android:layout_alignStart="@+id/editPorcentagem" />

    <TextView
        android:text="de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:layout_below="@+id/editPorcentagem"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editPorcentagem"
        android:layout_toRightOf="@+id/editPorcentagem"
        android:layout_toEndOf="@+id/editPorcentagem" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editValor"
        android:layout_marginTop="37dp"
        android:id="@+id/btnCalcular"
        android:layout_alignLeft="@+id/editValor"
        android:layout_alignStart="@+id/editValor"
        android:layout_alignRight="@+id/editValor"
        android:layout_alignEnd="@+id/editValor"
        android:textColor="#ffff"
        android:background="@color/colorAccent" />

    <TextView
        android:text="Quanto Ã© ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
